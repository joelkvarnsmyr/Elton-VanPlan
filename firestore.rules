rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Projects
    match /projects/{projectId} {
      // Allow read/update/delete if the EXISTING document is owned by the user
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      // Allow create if the NEW document claims to be owned by the user
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      match /{allPaths=**} {
        // Subcollections inherit access based on the parent project
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;
      }
    }
  }
}